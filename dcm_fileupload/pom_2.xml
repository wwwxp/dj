<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.2.2.RELEASE</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>
    <groupId>com.tydic.bp</groupId>
    <artifactId>fileupload</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>dcm_fileupload</name>
    <description>file upload to fastdfs</description>

    <properties>
        <java.version>1.8</java.version>
        <commons-lang.version>3.1</commons-lang.version>
        <commons-io.version>2.2</commons-io.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
            <exclusions>
                <exclusion>
                    <artifactId>spring-boot-starter-logging</artifactId>
                    <groupId>org.springframework.boot</groupId>
                </exclusion>
            </exclusions>
        </dependency>

        <!--日志-->
        <!--<dependency>-->
            <!--<groupId>org.springframework.boot</groupId>-->
            <!--<artifactId>spring-boot-starter-log4j2</artifactId>-->
        <!--</dependency>-->
        <!--日志框架整合-->
        <!--log4j适配log4j2接口-->
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-1.2-api</artifactId>
            <version>2.11.0</version>
        </dependency>
        <!--jcl桥接slf4j接口-->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jcl-over-slf4j</artifactId>
            <version>1.7.25</version>
        </dependency>
        <!--jul桥接slf4j接口-->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jul-to-slf4j</artifactId>
            <version>1.7.25</version>
        </dependency>
        <!--slf4j接口-->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.25</version>
        </dependency>
        <!--slf4j绑定log4j-->
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-slf4j-impl</artifactId>
            <version>2.11.0</version>
        </dependency>
        <!--log4j2实现-->
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
            <version>2.11.0</version>
        </dependency>

        <!--集团分布式文件系统-->
        <dependency>
            <groupId>com.ctg</groupId>
            <artifactId>ctdfs-common</artifactId>
            <version>2.4.0</version>
        </dependency>
        <dependency>
            <groupId>com.ctg</groupId>
            <artifactId>ctdfs-core</artifactId>
            <version>2.4.0</version>
        </dependency>
        <dependency>
            <groupId>io.prometheus</groupId>
            <artifactId>simpleclient</artifactId>
            <version>0.5.0</version>
        </dependency>
        <dependency>
            <groupId>io.prometheus</groupId>
            <artifactId>simpleclient_servlet</artifactId>
            <version>0.5.0</version>
        </dependency>
        <dependency>
            <groupId>io.prometheus</groupId>
            <artifactId>simpleclient_pushgateway</artifactId>
            <version>0.5.0</version>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <version>3.1.0</version>
        </dependency>
        <dependency>
            <groupId>org.apache.curator</groupId>
            <artifactId>curator-client</artifactId>
            <version>2.12.0</version>
        </dependency>
        <dependency>
            <groupId>org.apache.zookeeper</groupId>
            <artifactId>zookeeper</artifactId>
            <version>3.4.6</version>
            <exclusions>
                <exclusion>
                    <artifactId>log4j</artifactId>
                    <groupId>log4j</groupId>
                </exclusion>
            </exclusions>
        </dependency>


        <!---->
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>2.6</version>
        </dependency>

        <!--<dependency>-->
            <!--<groupId>net.jpountz.lz4</groupId>-->
            <!--<artifactId>lz4</artifactId>-->
            <!--<version>1.3.0</version>-->
        <!--</dependency>-->
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.6</version>
        </dependency>

        <dependency>
            <groupId>com.tydic.bp</groupId>
            <artifactId>bp-common</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>${commons-lang.version}</version>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-configuration-processor</artifactId>
            <optional>true</optional>
        </dependency>

        <!--DCA-->
        <dependency>
            <groupId>com.tydic.dca</groupId>
            <artifactId>dca-client</artifactId>
            <version>3.1</version>
        </dependency>


        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.16.20</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>16.0.1</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
            <exclusions>
                <exclusion>
                    <groupId>org.junit.vintage</groupId>
                    <artifactId>junit-vintage-engine</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!--引入本地jar-->
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.8.0</version>
        </dependency>
    </dependencies>

    <build>
        <finalName>FileUpload</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <!--不打包资源文件-->
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <!--MANIFEST.MF 中 Class-Path 加入前缀-->
                            <classpathPrefix>./lib/</classpathPrefix>
                            <mainClass>com.tydic.bp.FileuploadApplication</mainClass>
                        </manifest>
                        <manifestEntries>
                            <Class-Path>
                                ./lib/dfs/activation-1.1.jar
                                ./lib/dfs/aopalliance-1.0.jar
                                ./lib/dfs/apacheds-i18n-2.0.0-M15.jar
                                ./lib/dfs/apacheds-kerberos-codec-2.0.0-M15.jar
                                ./lib/dfs/api-asn1-api-1.0.0-M20.jar
                                ./lib/dfs/api-util-1.0.0-M20.jar
                                ./lib/dfs/asm-3.1.jar
                                ./lib/dfs/avro-1.7.4.jar
                                ./lib/dfs/commons-beanutils-core-1.8.0.jar
                                ./lib/dfs/commons-cli-1.2.jar
                                ./lib/dfs/commons-compress-1.4.1.jar
                                ./lib/dfs/commons-configuration-1.6.jar
                                ./lib/dfs/commons-httpclient-3.1.jar
                                ./lib/dfs/commons-math3-3.1.1.jar
                                ./lib/dfs/curator-framework-2.7.1.jar
                                ./lib/dfs/curator-recipes-2.7.1.jar
                                ./lib/dfs/findbugs-annotations-1.3.9-1.jar
                                <!--./lib/dfs/gson-2.2.4.jar-->
                                ./lib/dfs/hadoop-annotations-2.7.3.2.5.3.0-37.jar
                                ./lib/dfs/hadoop-auth-2.7.3.2.5.3.0-37.jar
                                ./lib/dfs/hadoop-client-2.7.3.2.5.3.0-37.jar
                                ./lib/dfs/hadoop-common-2.7.3.2.5.3.0-37.jar
                                ./lib/dfs/hadoop-hdfs-2.7.3.2.5.3.0-37.jar
                                ./lib/dfs/hadoop-mapreduce-client-core-2.7.3.2.5.3.0-37.jar
                                ./lib/dfs/hadoop-yarn-api-2.7.3.2.5.3.0-37.jar
                                ./lib/dfs/hadoop-yarn-common-2.7.3.2.5.3.0-37.jar
                                ./lib/dfs/hbase-annotations-1.1.2.2.5.3.0-37.jar
                                ./lib/dfs/hbase-client-1.1.2.2.5.3.0-37.jar
                                ./lib/dfs/hbase-common-1.1.2.2.5.3.0-37.jar
                                ./lib/dfs/hbase-protocol-1.1.2.2.5.3.0-37.jar
                                ./lib/dfs/htrace-core-3.1.0-incubating.jar
                                ./lib/dfs/httpclient-4.2.5.jar
                                ./lib/dfs/httpcore-4.4.4.jar
                                ./lib/dfs/jackson-core-asl-1.9.13.jar
                                ./lib/dfs/jackson-mapper-asl-1.9.13.jar
                                ./lib/dfs/jaxb-api-2.2.2.jar
                                ./lib/dfs/jcodings-1.0.8.jar
                                ./lib/dfs/jetty-util-6.1.26.jar
                                ./lib/dfs/joni-2.1.2.jar
                                ./lib/dfs/jsr305-3.0.0.jar
                                ./lib/dfs/leveldbjni-all-1.8.jar
                                ./lib/dfs/metrics-core-2.2.0.jar
                                ./lib/dfs/netty-all-4.0.23.Final.jar
                                ./lib/dfs/paranamer-2.3.jar
                                ./lib/dfs/protobuf-java-2.5.0.jar
                                ./lib/dfs/snappy-java-1.0.4.1.jar
                                ./lib/dfs/stax-api-1.0-2.jar
                                ./lib/dfs/xercesImpl-2.9.1.jar
                                ./lib/dfs/xml-apis-1.3.04.jar
                                ./lib/dfs/xmlenc-0.52.jar
                                ./lib/dfs/xz-1.0.jar
                            </Class-Path>
                        </manifestEntries>
                    </archive>
                    <excludes>
                        <exclude>**/*.yml</exclude>
                        <exclude>**/*.properties</exclude>
                        <exclude>**/*.sh</exclude>
                    </excludes>
                    <outputDirectory>${project.basedir}/target/FileUpload</outputDirectory>
                </configuration>
            </plugin>

            <!--拷贝依赖 copy-dependencies-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>
                                ${project.basedir}/target/FileUpload/lib/
                            </outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!--拷贝配置文件 copy-config-->
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-config</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <resources>
                                <resource>
                                    <directory>src/main/resources</directory>
                                </resource>
                            </resources>
                            <outputDirectory>${project.basedir}/target/FileUpload/config</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!--拷贝脚本 copy-bin-->
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-bin</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <resources>
                                <resource>
                                    <directory>src/main/documents/bin</directory>
                                </resource>
                            </resources>
                            <outputDirectory>${project.basedir}/target/FileUpload/bin</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!--spring boot repackage，依赖 maven-jar-plugin 打包的jar包 重新打包成 spring boot 的jar包-->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <!--重写包含依赖，包含不存在的依赖，jar里没有pom里的依赖-->
                    <includes>
                        <include>
                            <groupId>null</groupId>
                            <artifactId>null</artifactId>
                        </include>
                    </includes>
                    <layout>ZIP</layout>
                    <includeSystemScope>true</includeSystemScope>
                    <outputDirectory>${project.basedir}/target/FileUpload</outputDirectory>
                </configuration>
            </plugin>
        </plugins>

    </build>

</project>
